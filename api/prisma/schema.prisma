generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Automovel {
  id        Int      @id @default(autoincrement())
  modelo    String
  preco     Float
  alocacoes Alocacao[]
}
model Cliente {
  id     Int      @id @default(autoincrement())
  nome   String
  vendas Vendas[]
}
model Concessionaria {
  id        Int        @id @default(autoincrement())
  nome      String
  alocacoes Alocacao[]
  vendas    Vendas[]
}

model Alocacao {
  id               Int            @id @default(autoincrement())
  area             Int
  automovelId      Int
  concessionariaId Int
  automovel        Automovel     @relation(fields: [automovelId], references: [id])
  concessionaria   Concessionaria @relation(fields: [concessionariaId], references: [id])
  quantidade       Int
  vendas           Vendas[]
}

model Vendas {
  id               Int            @id @default(autoincrement())
  clienteId        Int
  alocacaoId       Int
  concessionariaId Int
  data             DateTime       @default(now())
  cliente          Cliente       @relation(fields: [clienteId], references: [id])
  alocacao         Alocacao       @relation(fields: [alocacaoId], references: [id])
  concessionaria   Concessionaria @relation(fields: [concessionariaId], references: [id])
}